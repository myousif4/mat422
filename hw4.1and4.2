import networkx as nx
import matplotlib.pyplot as plt

# Create a graph object
G = nx.Graph()

# Add nodes
G.add_node(1)
G.add_node(2)
G.add_node(3)

# Add edges (connecting nodes)
G.add_edge(1, 2)
G.add_edge(2, 3)

# Draw the graph
nx.draw(G, with_labels=True, node_size=500, node_color='skyblue', font_size=16, font_weight='bold')

# Show the plot
plt.title("Simple Graph")
plt.show()
